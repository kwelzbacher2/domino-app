{
  "name": "domino-backend",
  "version": "1.0.0",
  "description": "Backend API for Domino Score Counter",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:serverless": "serverless offline",
    "build": "tsc && copy src\\db\\schema.sql dist\\db\\schema.sql",
    "start": "node dist/server.js",
    "migrate": "node dist/migrate.js",
    "deploy": "npm run build && serverless deploy",
    "deploy:prod": "npm run build && serverless deploy --stage prod",
    "logs": "serverless logs -f api -t"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.940.0",
    "@sendgrid/mail": "^8.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
